#include <iostream> 
#include <iomanip>

using namespace std;

int sumOfCh(char *ptr);

int main(){
    char *ptr = nullptr;
    char strr[20];
    int sum = 0;

    ptr = strr;
    
    cout << "\n This program will add up the digits from a users input.";
    cout << "\n\t You may enter up to 15 characters!";
    cout << "\n\n Enter any alpha numeric characters to get the sum of the digits: ";
    cin >> setw(15) >>ptr;
   
    cout << "\n The sum of the digits is: " << sumOfCh(ptr);
    cout << "\n\n";
    return 0;
}

int sumOfCh(char *ptr){
    int sum = 0, x = 0;

    while(*(ptr + x) != '\0'){

        if(isdigit(*(ptr + x))){

            sum += (*(ptr + x) - '0');
        }
        x++;
    }
    
    return sum;
}
